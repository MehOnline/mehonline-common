{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true, 
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
  },
  "baseUrl": "./src",
  "exclude": ["node_modules"],
}